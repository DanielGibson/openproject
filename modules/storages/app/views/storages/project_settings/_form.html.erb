<% if OpenProject::FeatureDecisions.storage_project_folders_active? %>
  <% content_for :header_tags do %>
    <meta name="required_script" content="project_folder_mode_selection"/>
  <% end %>
<% end %>

<div class="form--field -required -higher-margin">
  <% case action_name %>
  <% when 'new' %>
    <%= f.select :storage_id,
                 (@available_storages.map do |storage|
                   [
                     "#{storage.name} (#{storage.short_provider_type})",
                     storage.id,
                     data: {
                       storage: {
                         name: storage.name,
                         id: storage.id,
                         href: "/api/v3/storages/#{storage.id}",
                         type: 'urn:openproject-org:api:v3:storages:Nextcloud',
                       },
                     },
                   ]
                 end),
                 selected: @available_storages.first.id.to_s,
                 container_class: '-slim' %>
    <% if User.current.admin? %>
      <span class="form--field-instructions">
        <%= t(:"storages.instructions.setting_up_additional_storages") %>
        <%= link_to "#{t(:label_administration)} / #{t(:project_module_storages)}", controller: '/storages/admin/storages', action: :index %>
        .
      </span>
    <% end %>
  <% when 'edit' %>
    <%= f.label :storage_id, class: "form--label -bold" do %>
      <%= t(:"storages.label_storage") %>
    <% end %>
    <div class="form--field-container -horizontal">
      <%= content_tag(:span, @project_storage.storage.name, id: 'active_storage', data: {
        storage: {
          name: @project_storage.storage.name,
          id: @project_storage.storage.id,
          href: "/api/v3/storages/#{@project_storage.storage.id}",
          type: 'urn:openproject-org:api:v3:storages:Nextcloud',
        },
      }) %>
    </div>
  <% end %>
</div>

<% if OpenProject::FeatureDecisions.storage_project_folders_active? %>
  <div class="form--field -required -higher-margin">
    <label class="form--label -bold">Project folder</label>
    <div class="form--field-container -horizontal">
      <%= f.label :project_folder_mode, class: "form--label-with-radio-button" do %>
        <%= f.radio_button :project_folder_mode, 'inactive', no_label: true %>
        <%= t(:"storages.label_no_specific_folder") %>
      <% end %>
    </div>
    <span class="form--field-instructions -with-bottom-spacing">
      <%= t(:"storages.instructions.no_specific_folder") %>
    </span>

    <div class="form--field-container -horizontal">
      <%= f.label :project_folder_mode, class: "form--label-with-radio-button" do %>
        <%= f.radio_button :project_folder_mode, 'manual', no_label: true %>
        <%= t(:"storages.label_existing_manual_folder") %>
      <% end %>
    </div>
    <span class="form--field-instructions -xwide">
      <%= t(:"storages.instructions.existing_manual_folder") %>
    </span>
  </div>

  <div style="display: none;" id="storages_manual_folder_selection" class="form--field -required -higher-margin">
    <label class="form--label -bold"> <%= t(:"storages.label_existing_manual_folder_selection") %> </label>
    <div class="form--field-container -horizontal">
      <%= f.text_field :project_folder_name,
                       value: '',
                       readonly: true,
                       placeholder: t(:"storages.placeholder_existing_folder_selection"),
                       container_class: "-middle",
                       no_label: true
      %>
      <%= f.hidden_field :project_folder_id %>
      <%= styled_button_tag class: "-highlight", id: 'open_location_picker_button', type: 'button' do %>
        <%= spot_icon('folder-open') %>
        <%= content_tag :span, t(:"storages.buttons.select_folder") %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="form--field">
  <%= styled_button_tag class: "-highlight" do %>
    <%= spot_icon('checkmark') %>
    <%= content_tag :span, submit_button_label %>
  <% end %>
  <%= link_to project_settings_projects_storages_path(@project), class: 'button' do %>
    <%= spot_icon('cancel') %>
    <%= content_tag :span, t(:button_cancel) %>
  <% end %>
</div>
